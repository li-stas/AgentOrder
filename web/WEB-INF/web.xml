<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!-- add servlet -->
    <servlet>
        <servlet-name>add</servlet-name>
        <servlet-class>servlets.AddServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>add</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>

    <!-- list servlet -->
    <servlet>
        <servlet-name>list</servlet-name>
        <servlet-class>servlets.ListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>list</servlet-name>
        <url-pattern>/list</url-pattern>
    </servlet-mapping>
    <!-- FileMenu servlet -->
    <servlet>
        <servlet-name>FileMenu</servlet-name>
        <servlet-class>servlets.FileMenuServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FileMenu</servlet-name>
        <url-pattern>/filemenu</url-pattern>
    </servlet-mapping>
    <!-- ToDo servlet -->
    <servlet>
        <servlet-name>ToDo</servlet-name>
        <servlet-class>servlets.ToDoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ToDo</servlet-name>
        <url-pattern>/todo</url-pattern>
    </servlet-mapping>
    <!-- LogOut servlet -->
    <servlet>
        <servlet-name>LogOut</servlet-name>
        <servlet-class>servlets.ToDoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogOut</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <!-- ServiceMenu servlet -->
    <servlet>
        <servlet-name>ServiceMenu</servlet-name>
        <servlet-class>servlets.ServiceServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServiceMenu</servlet-name>
        <url-pattern>/servicemenu</url-pattern>
    </servlet-mapping>

</web-app>